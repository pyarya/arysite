---
import { fade } from 'astro:transitions';
import HomeLayout from '../layouts/homelayout.astro';

const PageTitle = 'home';
---

<HomeLayout PageTitle={PageTitle}>
    <section class="intro">
        <div class="text">
            <h1 class="name" transition:animate="slide">Aryan Aryal</h1>
                <p transition:animate={fade({duration: '0.2s'})} class="desc" >
                 Hi!! I'm a 4th year EE student @ the <a href="https://www.ualberta.ca">university of alberta</a>. Thanks for visiting!
				 Some of my interests include <a href="https://arvp.org">robotics</a>, photography and art
                </p>
        </div>
    </section>
</HomeLayout>

<style>
	.intro {
                display: flex;
                flex-direction: column;
                align-items: center;
                text-align: left;
        }

	.intro .text {
			width: auto;
	}
</style>