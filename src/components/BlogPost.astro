---
const { title, url } = Astro.props;

---
<li class="postlink">
    <a href={url}>
        <container class="insidepost">{title}</container>
    </a>
</li>



<style>
a {
  display: flex;
  flex-direction: column;
  max-width: 40rem; 
  cursor: pointer;
  gap: 0.5rem; 
  border-radius: 0.375rem; 
  border: 1px solid #4a5568; 
  padding: 3rem; 
  transition: all 0.3s ease; 
  margin: 1%;
  text-decoration: none;
  color: #fff;
}

li {
  list-style-type: none; 

}


a:hover {
  transform: translateY(-0.5rem); 
  border-color: #cbd5e0; 
}


.flex {
  display: flex;
}

.flex-col {
  flex-direction: column;
}

.items-center {
  align-items: center;
}


p {
  margin: 0; 
  color: #f8fafc; 
}

.text-neutral-100 {
  color: #f8fafc; 
}

.truncate {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

svg {
  width: 1.125rem; /
  height: 1.125rem; 
  fill: none; 
  stroke: #4a5568; 
  transition: all 0.3s ease; 
}

a:hover svg {
  transform: translateX(0.25rem); 
}

@media (min-width: 768px) {
  .md\:flex-row {
    flex-direction: row !important;
  }
}
</style>
